{
	"description": "Bun-Bundler: Modern, Simple, and Ultra-Fast HTML Bundler. Requires Bun runtime. Bun | Pug/HTML | SCSS/CSS | JS | SVG Sprite | Image optimizations",
	"author": "jsqrt",
	"license": "MIT",
	"name": "bun-bundler",
	"version": "0.2.7",
	"type": "module",
	"engines": {
		"bun": ">=1.0.0"
	},
	"main": "./index.mjs",
	"types": "./index.d.ts",
	"exports": {
		".": "./index.mjs",
		"./modules": "./modules/index.js"
	},
	"scripts": {
		"test": "vitest run",
		"test:watch": "vitest",
		"typecheck": "tsc --noEmit",
		"test:html": "cd examples/html-boilerplate && bun run build",
		"test:pug": "cd examples/pug-boilerplate && bun run build"
	},
	"dependencies": {
		"browser-sync": "^3.0.2",
		"cross-env": "^7.0.3",
		"effect": "^3.13.2",
		"jsdom": "^24.1.0",
		"ora": "^9.0.0",
		"pug": "^3.0.3",
		"sass": "^1.77.6",
		"sharp": "^0.34.5",
		"typescript": "^5.7.3"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jsqrt/bun-bundler.git"
	},
	"files": [
		"index.mjs",
		"index.d.ts",
		"interfaces.ts",
		"src/",
		"modules/",
		"stdout/",
		"README.md",
		"LICENSE"
	],
	"devDependencies": {
		"@types/bun": "^1.3.2",
		"@types/node": "^24.10.0",
		"tsx": "^4.20.6",
		"vitest": "^4.0.8"
	}
}
